@model IEnumerable<Category>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-3">
    <h2>Category list</h2>
    <hr />
    <div class="row">
        <div class="col">
            @if (Model.Count() > 0)
            {
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Title</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.CategoryId
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    <a class="btn btn-primary btn-sm" aps-controller="Category" asp-action="Details" asp-route-id="@item.CategoryId">Details</a>

                                    <a class="btn btn-primary btn-sm" aps-controller="Category" asp-action="AddOrUpdate" asp-route-id="@item.CategoryId">AddOrUpdate</a>

                                    <a class="btn btn-danger btn-sm" aps-controller="Category" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger">
                    Kategori Eklenmemiş
                </div>
            }
        </div>
    </div>
</div>

