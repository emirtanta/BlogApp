@model IEnumerable<Blog>
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-3">
    <h2>Blog list</h2>
    <hr />
    <div>
        <a href="/Blog/Create" class="btn btn-primary">Create</a>
    </div>
    <hr />
    <div class="row">
        <div class="col">
            @if (Model.Count()>0)
            {
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Is Approved</th>
                            <th>IsHome</th>
                            <th>IsSlider</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @item.BlogId
                            </td>
                            <td>
                                <img src="~/img/@item.Image" width="50" height="50" />
                            </td>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @item.Date
                            </td>
                            <td>
                                @if (item.isApproved)
                                {
                                    <span class="glyphicon glyphicon-ok"></span>
                                }
                                else
                                {
                                    <span class="glyphicon glyphicon-remove"></span>
                                }
                            </td>
                            <td>
                                @if (item.isHome)
                                {
                                    <span class="glyphicon glyphicon-ok">Onaylandı</span>
                                }
                                else
                                {
                                    <span class="glyphicon glyphicon-remove">Onaylanmadı</span>
                                }
                            </td>
                            <td>
                                @if (item.isSlider)
                                {
                                    <span class="glyphicon glyphicon-ok">Onaylandı</span>
                                }
                                else
                                {
                                    <span class="glyphicon glyphicon-remove">Onaylanmadı</span>
                                }
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" aps-controller="Blog" asp-action="Edit" asp-route-id="@item.BlogId">Edit</a>

                                <a class="btn btn-primary btn-sm" aps-controller="Blog" asp-action="AddOrUpdate" asp-route-id="@item.BlogId">Add Or Edit</a>

                                <a class="btn btn-danger btn-sm" aps-controller="Blog" asp-action="Delete" asp-route-id="@item.BlogId">Delete</a>
                            </td>
                        </tr>
                        }
                        
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger">
                    Blog Eklenmemiş
                </div>
            }
        </div>
    </div>
</div>

