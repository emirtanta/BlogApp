@model IEnumerable<Blog>

@if (Model.Count() == 0)
{
    <div class="alert alert-warning">Kayıt yok</div>
}

else
{
    @foreach (var item in Model)
    {
        <div class="card text-center">
            <div class="card-header">
                @item.Title
            </div>
            <img class="card-img-top" src="~/img/@item.Image" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">Special title treatment</h5>
                <p class="card-text">@item.Description</p>
                <a asp-controller="Blog" asp-action="Details" asp-route-id="@item.BlogId" class="btn btn-primary">Blog Details</a>
            </div>
            <div class="card-footer text-muted">
                2 days ago
            </div>
        </div>
    }
}


